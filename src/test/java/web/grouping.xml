<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Master Suite">

    <groups>
        <run>
            <include name="master" />

            <include name="parabank" />
            <include name="demowf" />
            <include name="dataProvider" />

            <exclude name="parabank" />
            <exclude name="demowf" />
            <exclude name="dataProvider" />
        </run>
    </groups>

    <listeners>
        <listener class-name="utilities.ExtendReportUtility" />
    </listeners>

    <test name="For parabank page">
        <parameter name="os" value="Windows"/>
        <parameter name="browser" value="Chrome"/>
        <parameter name="url" value="https://parabank.parasoft.com/parabank/index.htm"/>
        <classes>
            <class name="web.testCases.TC001_UserRegistrationTest"/>
            <class name="web.testCases.TC002_LinksValidationTest"/>
            <class name="web.testCases.TC005_LoginValidationDDTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="For demowf page">
        <parameter name="os" value="Windows"/>
        <parameter name="browser" value="Chrome"/>
        <parameter name="url" value="https://www.demowf.aspnetawesome.com/"/>
        <classes>
            <class name="web.testCases.TC003_PFDDinnerRegistrationTest"/>
            <class name="web.testCases.TC004_GCPDinnerUpdateTest"/>
        </classes>
    </test> <!-- Test -->

</suite> <!-- Suite -->